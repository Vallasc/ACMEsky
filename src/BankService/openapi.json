{
  "openapi": "3.0.1",
  "info": {
    "title": "Bank service",
    "version": "v1",
    "description": "test JwtToken = sdfsfsfsdfs"
  },
  "servers": [
    {
      "url": "http://localhost:8070"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "user-controller"
        ],
        "operationId": "saveUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/payments": {
      "get": {
        "tags": [
          "payment-controller"
        ],
        "operationId": "getAllPayments",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WaitingPayment"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "JwtAuth": []
          }
        ]
      },
      "post": {
        "tags": [
          "payment-controller"
        ],
        "operationId": "savePayment",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentLinkRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Link"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "JwtAuth": []
          }
        ]
      }
    },
    "/auth": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "operationId": "auth",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": [
          "user-controller"
        ],
        "operationId": "getUser",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "JwtAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "UserRequest": {
        "required": [
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "loginId": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "balance": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "PaymentLinkRequest": {
        "required": [
          "description",
          "notificationUrl"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "notificationUrl": {
            "type": "string"
          }
        }
      },
      "Link": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "paymenToken": {
            "type": "string"
          }
        }
      },
      "AuthRequest": {
        "required": [
          "password",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "jwtToken": {
            "type": "string"
          }
        }
      },
      "WaitingPayment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "userId": {
            "type": "string"
          },
          "expireTime": {
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "paymentToken": {
            "type": "string"
          },
          "payed": {
            "type": "boolean"
          },
          "notificationUrl": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Access token is missing or invalid"
      }
    },
    "securitySchemes": {
      "JwtAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}